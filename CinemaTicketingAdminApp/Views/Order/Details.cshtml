@{
}
@model CinemaTicketingAdminApp.Models.Order


<div class="container">
    <div class="m-3">
        <h2>Order For: @Model.User.UserName</h2>
    </div>

    @for (int i = 0; i < Model.MovieTickets.Count; i++)
    {
        var item = Model.MovieTickets.ElementAt(i).SelectedMovieTicket;

        if (i % 3 == 0)
        {
            @:<div class="row">
            }

            <div class="card" style="width: 20rem; margin:10px;">
                <img class="card-img-top" src="@item.Movie.MovieImage" alt="Card image cap" style="height:90%; width:100%">
                <div class="card-body">
                    <h5 class="card-title">@item.Movie.MovieName</h5>
                    <p><small>Genre: @item.Movie.Genre</small></p>
                    <p class="card-text">Ticket Number: @item.Ticket.TicketNumber</p>
                    <p class="card-text">Row: @item.Ticket.Row</p>
                    <p class="card-text">Seat Number: @item.Ticket.SeatNumber</p>
                    <div class="card-footer">
                        <p style="text-align:center">Price: @item.Movie.MoviePrice MKD</p>
                    </div>
                </div>
            </div>

            if (i % 3 == 2)
            {
            @:</div>
        }
    }


</div>

@{
}

@model List<CinemaTicketingAdminApp.Models.Order>

<h1>Order Details</h1>

<div class="container">

    <div class="row">
        <a class="btn btn-outline-success" asp-controller="Order" asp-action="ExportAll">Export</a>
    </div>

    <div class="row m-4">
        @if (Model.Count == 0)
        {
            <h5>No orders.</h5>
        }
        else
        {
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Customer Details</th>
                        <th scope="col">number of products</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        var item = Model[i];

                        <tr>
                            <th scope="row">@(i + 1)</th>
                            <td>@item.User.Email</td>
                            <td>@item.MovieTickets.Count</td>
                            <td><a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-secondary">View Order</a></td>
                            <td><a asp-action="CreateInvoice" asp-route-id="@item.Id" class="btn btn-outline-secondary">Create Invoice</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>

</div>